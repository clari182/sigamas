<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <navigation-rule>
        <from-view-id>/Login/login.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>homeClient</from-outcome>
            <to-view-id>/Home/homeClient.xhtml</to-view-id>
            <redirect/>
        </navigation-case>       
    </navigation-rule>
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>login</from-outcome>
            <to-view-id>/Login/login.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>

            <from-outcome>crearParcela</from-outcome>
            <to-view-id>/Parcela/crearParcela.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>usuariosCuenta</from-outcome>
            <to-view-id>/Usuario/usuariosCuenta.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>   
            <from-outcome>usuarioPerfil</from-outcome>
            <to-view-id>/Usuario/perfil.xhtml</to-view-id>
            <redirect/>
        
        </navigation-case>
        <navigation-case>
            <from-outcome>homeClient</from-outcome>
            <to-view-id>/Home/homeClient.xhtml</to-view-id>
            <redirect/>
        </navigation-case> 
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/Home/homeClient.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>usuariosCuenta</from-outcome>
            <to-view-id>/Usuario/usuariosCuenta.xhtml</to-view-id>
            <redirect/>
        </navigation-case>

        <navigation-case>
            <from-outcome>crearParcela</from-outcome>
            <to-view-id>/Parcela/crearParcela.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>administracion</from-outcome>
            <to-view-id>/Administracion/administracion.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/Usuario/perfil.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>homeClient</from-outcome>
            <to-view-id>/Home/homeClient.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/Usuario/usuariosCuenta.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>crearUsuario</from-outcome>
            <to-view-id>/Usuario/crearUsuario.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>invitacionUsuario</from-outcome>
            <to-view-id>/Usuario/invitacionUsuario.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/Usuario/crearUsuario.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>UsuariosCuenta</from-outcome>
            <to-view-id>/Usuario/usuariosCuenta.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
